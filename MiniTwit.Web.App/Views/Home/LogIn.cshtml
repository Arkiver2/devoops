@model WebPlayground.Models.Login

@{
    ViewData["Title"] = "Sign In";
}

<h2>Sign In</h2>
@using (Html.BeginForm())
{
    var valSummary = @Html.ValidationSummary(true, "Something went wrong");
    if (valSummary != null && valSummary.ToString() != "")
    {
        <div class=error><strong>Error:</strong>@valSummary</div>
    }
    <dl>
        <dt>Username:</dt>
        <dd>
            @Html.TextBoxFor(u => u.UserName)
            @Html.ValidationMessageFor(u => u.UserName)
        </dd>
        <dt>Password:</dt>
        <dd>
            @Html.PasswordFor(u => u.Password)
            @Html.ValidationMessageFor(u => u.Password)
        </dd>
    </dl>
    <div class=actions><input type=submit value="Sign In"></div>
}
